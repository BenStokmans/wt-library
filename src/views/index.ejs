<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/index.css">
    <title>WTLibrary - Home</title>
</head>
<body>
    <section class="main-content">
        <header>
            <h2>WTLibrary</h2>
            <% if (isAuthenticated) { %>
                <p>Logged in as <%= user.firstName[0] + ". " + user.lastName %></p>
                <a class="auth-link" href="/logout">Log out</a>
            <% } else { %>
                <a class="auth-link" href="/login">Log in</a>
                <a class="auth-link" href="/signup">Sign up</a>
            <% } %>
        </header>
        <section class="catalog">
            <% for (var book of books) { %>
                <article class="catalog__book-card">
                    <img src="<%= book.coverImageUrl%>" alt="Cover image of <%= book.title %>">
                    <h4><%= book.title %></h4>
                    <p>by <%= book.author.alias ? book.author.alias : book.author.first_name + " " + book.author.last_name %></p>
                </article>
            <% } %>
        </section>
        <footer></footer>
    </section>
</body>
</html>
